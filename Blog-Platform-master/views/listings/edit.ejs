<% layout("/layouts/boilerplate")%>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h1>Edit</h1>
      <form
        action="/listing/<%=data._id %>/edit?_method=PUT"
        method="POST"
        novalidate
        enctype="multipart/form-data"
        class="needs-validation"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="title"
            id=""
            class="form-control"
            value="<%= data.title  %>"
            required
          />
        </div>

        <div class="form-group mb-3">
          <label for="comment" class="form-label">Description</label>
          <textarea
            name="description"
            id="comment"
            class="form-control"
            rows="5"
          ><%= data.description %></textarea>
        </div>
          
        <div class="mb-3">
          <label for="image" class="form-label">Upload New Image</label>
          <br>
          <img
        src="<%= data.image.url%>"
        height="100vh"
        alt="listing_image"
      /> 
      <br>
      <br>
          <input
            type="file"
            name="image"
            id="<%= data.image.url%>"
            value=""
            class="form-control"
          
          />
        </div>
    
          <div class="mb-3">
          
          </div>
          <div class="mb-3 ">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              name="country"
              id=""
              class="form-control"
              value="<%= data.country  %>"
              required
            />
          </div>
       
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="location"
            id=""
            class="form-control"
            value="<%= data.location  %>"
            required
          />
        </div>

        <button class="mb-3 btn btn-dark add-btn">Edit</button>
      </form>
    </div>
  </div>
  